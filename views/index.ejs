<!DOCTYPE html>
<html lang="en">
  <head>

    <style>
      .card.g-2.g-lg-3.px-2 {
        margin: 20px;
        box-shadow: 2px 0px 10px -1px;
      }
      .row.container.g-2.g-lg-3 {
        text-align: center;
        margin-left: 130px;
      }
      .img-fluid {
        width: 1100px;
        padding-left: 12px;
        height: auto;
        margin-left: 68px;
      }


      img.card-img-top {
        height: 251px;
        padding: 18px;
        margin-left: -7px;
      }

      
      img.d-block.img-fluid {
        width: 997px;
        padding-left: 14px;
        margin: 1px;
      }
    </style>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <%- include('partials/nav.ejs')%>
    <title>Shopping Site</title>
  </head>

  <body>
    <h1><center>WelCome To Our Shopping Mall</center></h1>

    <%- include('partials/carousel.ejs')%>

    <div class="row container g-2 g-lg-3">
      <% for(let p of prods) {%>

      <div class="card g-2 g-lg-3 px-2" style="width: 18rem">
        <img class="card-img-top" src="<%= p.image%>" alt="Card image cap" />
        <div class="card-body">
          <h5 class="card-title"><%= p.pname%></h5>
          <p class="card-text">â‚¹ <%= p.price%></p>
          <p class="card-text"><%= p.description%></p>
          <a href="/edit/<%=p._id %>" class="btn btn-primary">Edit</a>
          <a href="/delete/<%=p._id %>" class="btn btn-primary">Delete</a>
        </div>
      </div>

      <% } %>
    </div>

   
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    
  </body>
</html>
