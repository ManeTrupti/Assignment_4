<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <%- include('partials/nav.ejs')%>
      
        <div class="container" style="height:560px;background-color: rgb(250, 130, 228); color:rgb(18, 17, 17);">

           
                <div class="row">
                    <div class="col-sm-12"><br>
                        <center><h2>Add Product</h2></center>

                        <form action="/edit-data" method="POST">
                            <input type="hidden" name="_id" value="<%= product._id%>">
                            <div class="form-group">
                                <label for="title">Title</label><br>
                                <input class="form-control" id="title" name="pname" value="<%= product.pname%>">
                            </div> <br><br>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input class="form-control" id="price" name="price" value="<%= product.price%>">
                            </div> <br><br>
                            <div class="form-group">
                                <label for="imageURL">Image URL</label>
                                <input class="form-control" id="imageURL" name="image" value="<%= product.image%>">
                            </div> <br><br>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" name="description"
                                    id="description"><%= product.description%></textarea>
                            </div> <br><br>
                            <center><button type="submit" class="btn btn-primary">Submit</button></center>
                        </form>
                        <br>
                    </div>

                </div>
          </div>
     </div>
 </div>
       

